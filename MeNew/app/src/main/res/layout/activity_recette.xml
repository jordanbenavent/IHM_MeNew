<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecetteActivity">

    <TextView
        android:id="@+id/recetteNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="TEST"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recetteImage"
        />

    <ImageView
        android:id="@+id/recetteImage"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:layout_constraintWidth="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@+id/recetteNom"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/recetteTemps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="TEST"
        android:textColor="#3F51B5"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/recetteImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recette"
        />

    <TextView
        android:id="@+id/recette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="TEST"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/recetteTemps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/fragmentRecette"
        />

    <fragment
        android:id="@+id/fragmentRecette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="ihm.menew.fragments.MainFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        tools:ignore="MissingConstraints"/>



</android.support.constraint.ConstraintLayout>